{
  "name": "IngellenzaDesignSystem",
  "description": "Sistema de dise√±o basado en amagidesarrollo.com, enfocado en un estilo moderno, limpio y profesional.",
  "base": {
    "fontFamily": "Inter, sans-serif",
    "fontSizeBase": "16px",
    "lineHeightBase": "1.6"
  },
  "colors": {
    "primary": "#0A192F",
    "secondary": "#007BFF",
    "accent": "#00CFFF",
    "textLight": "#F8F9FA",
    "textDark": "#343A40",
    "backgroundLight": "#FFFFFF",
    "backgroundDark": "#E9ECEF",
    "border": "#CED4DA"
  },
  "typography": {
    "heading1": {
      "fontSize": "3.5rem",
      "fontWeight": "700",
      "color": "textLight",
      "lineHeight": "1.2"
    },
    "heading2": {
      "fontSize": "2.5rem",
      "fontWeight": "600",
      "color": "textDark",
      "lineHeight": "1.3"
    },
    "heading3": {
      "fontSize": "1.75rem",
      "fontWeight": "600",
      "color": "textDark",
      "lineHeight": "1.4"
    },
    "bodyText": {
      "fontSize": "1rem",
      "fontWeight": "400",
      "color": "textDark",
      "lineHeight": "1.6"
    },
    "link": {
      "color": "secondary",
      "hoverColor": "accent",
      "textDecoration": "none",
      "transition": "color 0.3s ease"
    }
  },
  "spacing": {
    "small": "0.5rem",
    "medium": "1rem",
    "large": "2rem",
    "xlarge": "4rem",
    "sectionPaddingY": "6rem"
  },
  "components": {
    "button": {
      "backgroundColor": "accent",
      "textColor": "textLight",
      "padding": "0.75rem 1.5rem",
      "borderRadius": "0.5rem",
      "fontWeight": "600",
      "hoverBackgroundColor": "secondary",
      "transition": "background-color 0.3s ease",
      "boxShadow": "0 4px 6px rgba(0, 0, 0, 0.1)"
    },
    "card": {
      "backgroundColor": "backgroundLight",
      "borderRadius": "0.75rem",
      "padding": "2rem",
      "boxShadow": "0 4px 6px rgba(0, 0, 0, 0.1)",
      "transition": "transform 0.3s ease",
      "hoverTransform": "translateY(-5px)",
      "iconSize": "3rem",
      "iconColor": "secondary"
    },
    "inputField": {
      "backgroundColor": "backgroundLight",
      "borderColor": "border",
      "borderWidth": "1px",
      "borderRadius": "0.25rem",
      "padding": "0.75rem",
      "textColor": "textDark",
      "focusBorderColor": "secondary"
    }
  },
  "layout": {
    "header": {
      "height": "4rem",
      "backgroundColor": "primary",
      "textColor": "textLight",
      "paddingX": "large",
      "sticky": true,
      "logoSize": "2.5rem"
    },
    "heroSection": {
      "minHeight": "80vh",
      "backgroundColor": "primary",
      "textColor": "textLight",
      "paddingY": "xlarge",
      "textAlign": "center"
    },
    "section": {
      "paddingY": "sectionPaddingY",
      "alternatingBackgrounds": [
        "backgroundLight",
        "backgroundDark"
      ]
    },
    "footer": {
      "backgroundColor": "primary",
      "textColor": "textLight",
      "paddingY": "large",
      "textAlign": "center"
    }
  },
  "imagePlaceholder": {
    "width": "600",
    "height": "400",
    "backgroundColor": "E0E0E0",
    "textColor": "333333",
    "text": "Placeholder"
  },
  "patterns": {
    "cleanMinimalist": true,
    "modernAesthetics": true,
    "responsiveDesign": true,
    "subtleHoverEffects": true,
    "clearVisualHierarchy": true
  }
}
